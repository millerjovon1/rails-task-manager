<div class="container">
  <h1>Your Task</h1>
  <ul>
    <%@tasks.each do |task| %>
      <div class="d-flex">
        <li ><%= link_to task.title ,task_path(task)%></li>
        <p><%= link_to '🗑️', task_path(task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }  %></p>
      </div>
    <% end %>
  </ul>
</div>
