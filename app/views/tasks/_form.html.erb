<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.check_box :completed if @task.id%>
  <%= f.label :completed if @task.id %>
  <%= f.submit class: 'btn btn-primary mt-2' %>
<% end %>
<%= link_to "Back to listings", tasks_path %>
